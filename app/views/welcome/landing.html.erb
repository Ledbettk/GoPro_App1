<div class="row">
	<div class="col-md-12 text-center">
		<div class="col-md-4 col-md-offset-4">
			<div class="landing-login-panel" style="margin-top:25%;">
				<div class="landing-bg-img">
					<img src="<%= asset_path 'prophile-logo.png' %>" class="img-scaled">
				</div>
				<div class="landing-login-panel-body">
					<h1>Sign in</h1>
					<form method="post" class="text-center form-group">
						<div class="row" style="margin-top: 10px; margin-bottom: 10px;">
							<input type="text" placeholder="username" class="form-control landing-field">
						</div>
						<div class="row" style="margin-top: 10px; margin-bottom: 10px;">
							<input class="form-control landing-field" type="text" placeholder="password">
						</div>
						<div class="row" style="margin-top: 10px; margin-bottom: 10px;">
							<input class="btn btn-primary" href="#" value="submit">
						</div>
					</form>
					<hr>

					<div class="row text-center">
						<h3>Need to sign up?</h3>
						<input class="btn btn-primary" href="#" value="create account">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


