
<h1 class="text-center">Submit New Video</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="formcontainer">
			<%= form_for(@video) do |f| %>
				<%= render 'shared/error_messages', object: @video %>

				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>

				<%= f.label :link %>
				<%= f.text_field :link, class: 'form-control' %>

				
				<%= f.submit "Submit New Video", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>