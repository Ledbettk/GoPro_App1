<% if @videos %>
<div class="container">
	<div class="row">
		<% @videos.each do |video| %>
			<div class="col-md-4 col-xs-6">
				<div class="panel text-center">
					<div class="panel-header text-center">
					<% if video.title %>
						<h2><%= video.title %></h2>
					<% else %>
						<h2>[missing video title]</h2>
					<% end %>
					</div>
					<div class="panel-body">
						<a href="/videos/<%= video.id %>">
							<div class="glyphicon glyphicon-play-circle play-glyph"></div>
							<% if video.youtube_id == nil %>
								<img class="video-prev">
							<% else %>
								<img class="video-prev" src="http://img.youtube.com/vi/<%= video.youtube_id %>/0.jpg">
							<% end %>

							
						</a>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>

<% else %>
No videos here fool!
<% end %>